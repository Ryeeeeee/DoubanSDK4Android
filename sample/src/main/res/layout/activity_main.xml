<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/navigation_status_bar_offset"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/button_auth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/TestButton"
            android:text="@string/auth"/>

        <Button
            android:id="@+id/button_current_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/TestButton"
            android:text="获取当前用户信息"/>

        <Button
            android:id="@+id/button_animation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/TestButton"
            android:text="AnimationTest"/>

        <Button
            android:id="@+id/button_search_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/TestButton"
            android:text="SearchUser"/>

        <Button
            android:id="@+id/button_get_user_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/TestButton"
            android:text="GetUserInfo"/>

        <Button
            android:id="@+id/button_get_movie_celebrity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/TestButton"
            android:text="GetMovieCelebrity"/>

        <Button
            android:id="@+id/button_get_movie_subject"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/TestButton"
            android:text="GetMovieSubject"/>

        <Button
            android:id="@+id/button_search_movie"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/TestButton"
            android:text="SearchMovie"/>

        <Button
            android:id="@+id/button_get_movie_top250"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/TestButton"
            android:text="GetMovieTop250"/>

        <Button
            android:id="@+id/button_get_movie_us_box"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/TestButton"
            android:text="GetMovieUsBox"/>

        <Button
            android:id="@+id/button_post_shuo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/TestButton"
            android:text="PostShuo"/>

    </LinearLayout>
</ScrollView>
